<h1>Books</h1>

  <table>
  	<thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.body %>
        </td>

        <td>
          <%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "Destroy", book_path(book.id), method:  :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
	</tbody>
  </table>
<!-- 新規投稿フォーム -->
     <h2>New book</h2>
     <%= form_for(@book) do |f| %>

     <% if @book.errors.any? %>
       <div id="error_explanation" class="alert alert-danger">
         <ul>
           <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
         </ul>
       </div>
     <% end %>

     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Body</h4>
     <%= f.text_field :body %>

     <p>
     <%= f.submit 'Create Book' %>
     </p>
     <% end %>
